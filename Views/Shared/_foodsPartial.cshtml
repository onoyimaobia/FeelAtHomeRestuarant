@model IEnumerable<FeelAtHomeRestaurant.Models.MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


@foreach (var food in Model)
{
    <div class="col-md-3">
        <div class="card">
            @{var item = @food.Image.Split(".").Last(); }
            @if (item == "mp4")
            {
                <video loop="loop"  muted autoplay="autoplay" style="width:100%; max-height:100%;">
                    <source src="@Url.Content(food.Image)" type="video/mp4" />
                </video>
            }
            else
            {
                <img src="@Url.Content(food.Image)" class=" card-img-top img-fluid" height="50" width="100">
            }
            <div class="card-body" style="padding:0">
                <div class="col-sm-12" style="padding:0">
                    <h6 style="text-align:center">@food.Name</h6>
                </div>
                <div class="col-sm-12" style="padding:0">
                    <p>Category : @food.CategoryType.Name</p>
                </div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6" style="padding:0">
                            <p> Price: ₦@(string.Format("{0:N}", food.Price))</p>

                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-primary btn-sm pull-right" asp-route-id="@food.MenuItemId" asp-controller="ShoppingCart" asp-action="Create"> Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}