@model FeelAtHomeRestaurant.ViewModel.CategoryTypeViewModel

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "Edit";
    var Category = ViewBag.Category as FeelAtHomeRestaurant.ViewModel.CategoryTypeViewModel;
}

<h1>Edit</h1>

<h4>Edit Category Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Category.CategoryTypeId" asp-for="@Model.CategoryTypeId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input value="@Category.Name" asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input value="@Category.DisplayOrder" asp-for="@Model.DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

