@model List<FeelAtHomeRestaurant.ViewModel.OrderDetailViewModel>
@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var OrderHistory = ViewBag.MenuItems as FeelAtHomeRestaurant.ViewModel.OrderDetailViewModel;
}

<h2 style="text-align:center">OrderHistory</h2>


<div class="card" style="background-color:white">

    <div>

        @if (Model.Count == 5)
        {<a asp-action="OrderHistory" asp-controller="Order" asp-route-id="1" class="btn btn-sm btn-success"> Load all Order's...</a>




         }
    </div>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="thumbnail row">
                    @await Html.PartialAsync("_OrderDetailPartialView", item)
                </div>

            }
   

        }
        else
        {
            <div class="text-danger">
                <h5 style="text-align:center">Error... Please try again</h5>
            </div>
        }



    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success pull-right">Pleace Another Order</a>
        </div>
    </div>
</div>



