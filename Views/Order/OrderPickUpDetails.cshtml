@model FeelAtHomeRestaurant.ViewModel.OrderDetailViewModel
@using FeelAtHomeRestaurant.Utility;
    @{
        ViewData["Title"] = "OrderPickUpDetails";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>OrderPickUpDetails</h2>
    <form method="post" asp-action="OrderPickUpDetails" asp-controller="Order">
        <div class="row thumbnail">
            <div class="col-sm-8" style="border-right:1px solid #bbb9b9">
                <br />
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.ApplicationUser.FirstName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.ApplicationUser.FirstName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.ApplicationUser.LastName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.ApplicationUser.LastName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.ApplicationUser.Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.ApplicationUser.Email" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.ApplicationUser.PhoneNumber" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.ApplicationUser.PhoneNumber" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.OrderTotal" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.OrderTotal" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.Orderdate" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input value="@Model.OrderHeader.Orderdate.ToShortDateString()  @Model.OrderHeader.PickUpTime.ToShortTimeString()" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label asp-for="@Model.OrderHeader.Comment" class="custom-label"></label>
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="@Model.OrderHeader.Comment" disabled class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <br />
                <div class="col-sm-12">
                    <h4> Order No : @Model.OrderHeader.OrderHeaderId</h4>
                </div>
                <div class="col-sm-12">
                    <ul class="list-group">
                        @foreach (var details in Model.OrderDetail)
                        {
                            <li class="list-group-item">
                                <span class="badge">@details.Count</span>
                                @details.Name
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-sm-12">
                    @if (Model.OrderHeader.Status.Equals(SD.StatusReady))
                    {
                        <button type="submit" asp-route-orderId="@Model.OrderHeader.OrderHeaderId" class="btn btn-success">
                            <span class="glyphicon glyphicon-check"></span>Confirm Pickup
                        </button>
                    }
                    else
                    {
                        <button type="submit" disabled class="btn btn-primary">@Model.+OrderHeader.Status</button>
                    }
                </div>
            </div>
        </div>
    </form>


